{% extends 'dashboard/index.html.twig' %}


{% block header %}Competitions{% endblock %}

{% block content %}
    <div class="container-box">
        <div class="overflow-hidden bg-white shadow-sm sm:rounded-lg dark:bg-gray-800">
            <div class="p-1 text-gray-900 dark:text-gray-100">

                <table
                        class="min-w-full table-auto border-collapse border border-gray-200 dark:border-gray-700">
                    <thead>
                    <tr class="bg-gray-100 dark:bg-gray-700">
                        <th class="px-4 py-2 text-left border border-gray-300 dark:border-gray-600">Name</th>
                        <th class="px-4 py-2 text-left border border-gray-300 dark:border-gray-600">Date</th>
                        <th class="px-4 py-2 text-left border border-gray-300 dark:border-gray-600"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for competition in competitions %}
                        <tr>
                            <td class="px-4 py-2 border border-gray-300 dark:border-gray-600">{{ competition.name }}</td>
                            <td class="px-4 py-2 border border-gray-300 dark:border-gray-600">
                                {{ competition.startDate|date }}
                            </td>

                            <td class="px-4 py-2 border border-gray-300 dark:border-gray-600">
                                <button class="primary">Details</button>
                                <a href="{{ url('app_registration', {slug: competition.slug}) }}" class="primary rounded px-4 py-2 bg-blue-500 text-white hover:bg-blue-600">Sign-in</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
